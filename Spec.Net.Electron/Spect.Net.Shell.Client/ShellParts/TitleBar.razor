@using Spect.Net.Shell.Client.State
@using Spect.Net.Shell.Shared.State.Actions
@inject IJSRuntime JsRuntime

<div class="title-bar">
    <div class="logo">
        <img src="assets/images/spectnet-logo.png" />
    </div>
    <MenuBar TitleColor="white" />
    <AppCaption TitleColor="white" />
    <div class="title-buttons">
        <div class="window-control"
             @onclick="() => RendererProcessStore.Dispatch(new MinimizeWindowAction())">
            <SvgIcon IconName="minimize" Width="10" Height="10" Fill="white" />
        </div>
        <div class="window-control"
             @onclick="() => RendererProcessStore.Dispatch(new RestoreWindowAction())">
            <SvgIcon IconName="restore" Width="10" Height="10" Fill="white" />
        </div>
        <div class="window-control" 
             @onclick="() => RendererProcessStore.Dispatch(new MaximizeWindowAction())">
            <SvgIcon IconName="maximize" Width="10" Height="10" Fill="white" />
        </div>
        <div class="window-control close">
            <SvgIcon IconName="close-lean" Width="10" Height="10" Fill="white" />
        </div>
    </div>
</div>

